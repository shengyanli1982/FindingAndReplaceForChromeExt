{
    "manifest_version": 3,
    "name": "文本替换扩展",
    "version": "1.0.0",
    "author": "shengyanli1982",
    "description": "检查和替换页面上的文本，专门为 “【沉浸式翻译】” 设计。",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
